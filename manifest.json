{
  "manifest_version": 3,
  "name": "TTblocker",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script.js"]
    }
  ],
  "permissions": ["scripting", "contextMenus", "tabs", "https://*/", "http://*/", "activeTab"],
  "background": {
    "service_worker": "background/background.js",
    "default_icon": "icons/16.png",
    "type": "module"
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}